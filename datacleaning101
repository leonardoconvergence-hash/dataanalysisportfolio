#import the core libraries to do the data analysis of the dataset

import pandas as pd
import numpy as np
import matplotlib.pylab as plt

#read the dataset from the webpage
filename = "https://cf-courses-data.s3.us.cloud-object-storage.appdomain.cloud/IBMDeveloperSkillsNetwork-DA0101EN-SkillsNetwork/labs/Data%20files/auto.csv"

#create the list of header for the dataset

headers = ["symboling","normalized-losses","make","fuel-type","aspiration", "num-of-doors","body-style",
         "drive-wheels","engine-location","wheel-base", "length","width","height","curb-weight","engine-type",
         "num-of-cylinders", "engine-size","fuel-system","bore","stroke","compression-ratio","horsepower",
         "peak-rpm","city-mpg","highway-mpg","price"]

#let's read the file and see the first rows of it

df = pd.read_csv(filename, names = headers)
df.head()


# replace "?" the missing value to NaN
df.replace("?", np.nan, inplace = True)
df.head(5)

#Now we already know that we have NaN values in the dataset to take care

#lets see how many NaN we will need to substitute or replace and how to proceed


missing_data = df.isnull()

for column in missing_data.columns.values.tolist():
    print(column)
    print (missing_data[column].value_counts())
    print("")    

#substitute the NaN value for the average from normalized-loss

#So we have 205 rows, and in some of the the isnull fuction returned True which means we have missing data in it
#normalized-losses have 41, num-of-doors have 2, bore has 4,stroke have 4, horsepower have 2,peak-rpm have 2 and price have 4

#Use replace with average to substitute the NaN to the average of the data.

#First we find the average of the column

avg_norm_loss = df["normalized-losses"].astype("float").mean(axis=0)
print("Average of normalized-losses:", avg_norm_loss)

df["normalized-losses"].replace(np.nan, avg_norm_loss, inplace=True)

#repeat the process to every single column to replace the missing data with the average of the data from the column

avg_bore=df['bore'].astype('float').mean(axis=0)
df["bore"].replace(np.nan, avg_bore, inplace=True)

avg_stroke=df['stroke'].astype('float').mean(axis=0)
df['stroke'].replace(np.nan, avg_stroke, inplace=True)

avg_horsepower = df['horsepower'].astype('float').mean(axis=0)
df['horsepower'].replace(np.nan, avg_horsepower, inplace=True)

avg_peakrpm=df['peak-rpm'].astype('float').mean(axis=0)
df['peak-rpm'].replace(np.nan, avg_peakrpm, inplace=True)
